---
import Header from "@components/Header.astro";
import Main from "@components/Main.astro";
import Footer from "@components/Footer.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout>
	<div class="container">
		<Header />
		<Main />
		<Footer />
	</div>
</Layout>

<style>
	.container {
		display: grid;
		grid-template-rows: auto 1fr auto;
		min-height: 100vh;
	}
</style>
