---
import { Button } from "@components/components/ui/button";
import { PackagesContainer } from "@components/packages/PackagesContainer";
---

<main class="container mx-auto p-8">
    <section class="mb-8 text-center">
        <h1 class="text-3xl font-bold mb-4">Welcome to Hub Microcks.io</h1>
        <p class="text-lg text-gray-700">
            hub.microcks.io allows API owners to easily distribute their public
            open API specifications in the form of ready to use mocks and test
            suites for Microcks.
        </p>
    </section>

    <PackagesContainer client:load />

    <section class="text-center mt-16">
        <p class="text-lg text-gray-700 mb-6">
            List your API mocks on Hub.microcks.io
        </p>
        <Button>Submit your mocks</Button>
    </section>
</main>
